<h1>部屋一覧</h1>
<div class="row">
    <%= search_form_for @search do |f| %>
        <%= f.label :name_cont, '部屋を検索' %>
        <%= f.search_field :name_cont, class: 'input-field' %>
        <%= f.submit "検索", class: 'waves-effect waves-light btn' %>
    <% end %>
</div>


<ul class="collection">
    <% @rooms.each do |room| %>
        <%= link_to room_path(room) do %>
            <li class="collection-item"><%= room.name %></li>
        <% end %>
    <% end %>
</ul>

<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">部屋を作成</span>
            </div>
            <div class="card-action">
                <%= form_with model: @room, local: true do |f| %>
                    <%= f.label :name %>
                    <%= f.text_field :name %>
                    <%= button_tag tape: 'submit', class: 'btn-floating btn-large waves-effect waves-light red' do %>
                        <i class="material-icons">add</i>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
