<h2><%= @room.name %></h2>

<div class="row">
    <form class="col s12">
        <div class="row">
        <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">本文</label>
        </div>
        </div>
    </form>
    <a class="waves-effect waves-light btn chat_button">投稿</a>
</div>

<div class="messages" id="messages" data-room-id="<%= @room.id %>">
    <% @messages.each do |message| %>
        <p><%= message.content %></p>
    <% end %>
</div>